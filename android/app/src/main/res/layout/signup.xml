<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/glass_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- CARD -->
        <LinearLayout
            android:id="@+id/signupCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="26dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Titolo dentro la card -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:letterSpacing="0.04"
                android:text="@string/register_title"
                android:textColor="@color/title_color"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- NOME -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:letterSpacing="0.02"
                android:text="@string/name_title"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/nameInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="@string/name_hint"
                android:inputType="textPersonName"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint" />

            <!-- COGNOME -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:letterSpacing="0.02"
                android:text="@string/surname_title"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/surnameInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="@string/surname_hint"
                android:inputType="textPersonName"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint" />

            <!-- EMAIL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:letterSpacing="0.02"
                android:text="@string/email_title"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint" />

            <!-- TELEFONO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:letterSpacing="0.02"
                android:text="@string/telephone_title"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/phoneInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="@string/telephone_hint"
                android:inputType="phone"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint" />

            <!-- PASSWORD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:letterSpacing="0.02"
                android:text="@string/password_title"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint" />

            <!-- CONFERMA PASSWORD -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:letterSpacing="0.02"
                android:text="@string/password_confirm_title"
                android:textColor="@color/title_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input"
                android:hint="@string/password_confirm_hint"
                android:inputType="textPassword"
                android:padding="14dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_hint" />

            <!-- TERMS CHECKBOX -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/termsCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/termsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/title_color"
                    android:layout_marginStart="-14dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="0dp"/>
            </LinearLayout>

            <!-- REGISTRA BUTTON -->
            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_button"
                android:text="@string/register_button_str"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />


        </LinearLayout>

        <!-- LINK LOGIN -->
        <TextView
            android:id="@+id/loginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/login_link_str"
            android:textColor="@color/title_color"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/signupCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
